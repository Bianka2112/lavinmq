[Unit]
Description=AvalancheMQ - Very scalable and easily operated message queue server
Documentation=https://github.com/cloudamqp/avalanchemq
Requires=network.target
After=network.target

[Service]
ExecStart=/usr/bin/avalanchemq -c /etc/avalanchemq/avalanchemq.conf
Restart=on-failure
User=avalanchemq
Group=avalanchemq
LimitNOFILE=infinity
ProtectSystem=full

[Install]
WantedBy=multi-user.target
